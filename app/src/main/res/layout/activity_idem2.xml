<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/idem2"
    tools:context=".idem2">

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="49dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="btnidem2"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609"
        app:srcCompat="@drawable/yellowsfera"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="336dp"
        android:layout_height="175dp"
        android:background="#59C6F176"
        android:fontFamily="@font/warnockprosubh"
        android:text="Пройдя ещё немного вглубь синего леса, вы замечаете на своём пути освещающие путь фонарики и сферу светящие тёпло-жёлтым светом, вглядываясь в них, вам становится очень спокойно на душе, вы знаете, что всё будет хорошо… В конце дорожки светит яркое солнце…"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />
</androidx.constraintlayout.widget.ConstraintLayout>