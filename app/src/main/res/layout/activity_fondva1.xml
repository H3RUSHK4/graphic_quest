<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon2"
    tools:context=".fondva1">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="366dp"
        android:layout_height="523dp"
        android:background="#54C6F176"
        android:fontFamily="@font/warnockprosubh"
        android:text="Приветствуем тебя, волшебница! Все жители этого магического леса просят тебя помочь им, у них случилась беда… Великое древо, что питает магией это прекрасное место, заболело, и с каждым днём становится всё слабее и слабее. Времени нет, нужно срочно его спасти, иначе волшебного леса не станет! Удачи!"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="147dp"
        android:layout_height="77dp"
        android:fontFamily="@font/warnockprosubh"
        android:onClick="btnBack"
        android:text="Назад"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#56ECA4A4"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="140dp"
        android:layout_height="74dp"
        android:fontFamily="@font/warnockprosubh"
        android:onClick="btnNext"
        android:text="Далее"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#56ECA4A4"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />
</androidx.constraintlayout.widget.ConstraintLayout>
